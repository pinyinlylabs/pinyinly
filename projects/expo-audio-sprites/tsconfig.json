{
  "extends": "../../tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ESNext"],
    "module": "NodeNext",
    "emitDeclarationOnly": false,
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",
    "target": "ESNext",
    "types": ["node"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.mts",
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs"
  ],
  "exclude": ["dist", "build", "node_modules"]
}
