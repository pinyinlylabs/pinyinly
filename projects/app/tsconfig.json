{
  "extends": "../../tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "preserve",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "../../.moon/cache/types/projects/app",
    // HACK: `expo export` doesn't work properly with tsconfig project
    // references so it just compiles using this tsconfig file instead of the
    // one in `src/`.
    "paths": {
      "@/*": ["src/*"],
      "@haohaohow/lib/*": ["../lib/src/*"]
    },
    "target": "ESNext"
  },
  "include": [
    "*",
    ".expo/types/**/*.ts",
    "src/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ],
  "exclude": [],
  "references": [
    {
      "path": "./api"
    },
    {
      "path": "./bin"
    },
    {
      "path": "./src"
    },
    {
      "path": "./test"
    },
    {
      "path": "../eslint-rules"
    },
    {
      "path": "../lib"
    }
  ]
}
