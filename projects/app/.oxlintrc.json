{
  "$schema": "https://oxc.rs/schemas/oxlint.json",
  "extends": ["../oxlint-rules/base.oxlintrc.json"],
  "jsPlugins": ["eslint-plugin-react-compiler"],
  "rules": {
    "react-compiler/react-compiler": "error"
  },
  "overrides": [
    {
      "files": ["*.config.*"],
      "rules": {
        "import/no-default-export": "off"
      }
    },
    {
      "files": ["src/app/**/*.ts", "src/app/**/*.tsx"],
      "rules": {
        // expo-router pages use a default export for the page
        "import/no-default-export": "off"
      }
    },
    {
      "files": ["src/app/**/*+api.ts", "src/app/**/*+api.tsx"],
      "rules": {
        "import/no-default-export": "deny"
      }
    }
  ],
  "env": {
    "builtin": true
  },
  "ignorePatterns": [
    "bin/**",
    "test/**",
    "**/*.d.ts",
    "**/*.demo.tsx",
    "src/app/dev/**"
  ]
}
